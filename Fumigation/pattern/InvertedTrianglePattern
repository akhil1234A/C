#include <stdio.h>
int main() {
int n=6; 
for(int i=1; i<=n*2-1; i++){
for(int j=0; j<(i<=n? i-1 : n*2-i-1 ); j++){
	printf(" ");
}
for(int j=0; j<(i<=n? i : n*2-i); j++){
	printf("* ");
}
printf("\n");
}
return 0; 
}


#include <stdio.h>
int main() 
{
int n=5; 
for(int i=1; i<=n*2-1; i++){
for(int j=1; j<=(i<=6? 2*i-1 : (2*n+1-i)*2+1); j++){
printf((j>=i ? "*" : " ")); 
}
printf("\n"); 
}
return 0; 
}

