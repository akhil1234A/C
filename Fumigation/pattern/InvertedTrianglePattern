#include <stdio.h>
int main() {
int n=6; 
for(int i=1; i<=n*2-1; i++){
for(int j=0; j<(i<=n? i-1 : n*2-i-1 ); j++){
	printf(" ");
}
for(int j=0; j<(i<n? n+1-i : i-n+1); j++){
	printf("*");
}
printf("\n");
}
return 0; 
}

