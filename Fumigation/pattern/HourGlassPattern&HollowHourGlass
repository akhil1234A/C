#include <stdio.h>

int main()
{
    int n=5; 
    for(int i=1; i<=2*n-1; i++){
        
        for(int j=1; j<(i>5? 2*n-i : i); j++){
            printf(" ");
        }
        for(int j=1; j<=(i>5? (i-n+1)*2-1 : 2*n-(2*i-1)); j++){
            printf("%d",j);
        }
    
        printf("\n");
    }

    return 0;

}

