#include <stdio.h>

int main()
{
    
    for(int i=1; i<=3; i++){
	//1-3-5
        for(int j=1; j<=((i-1)*2+1); j++){
            printf("* ");
        }
        printf("\n");
	//1*1, 2*2, 3*3
        for(int j=0; j<i; j++){
            for(int k=0; k<i; k++){
                printf("* ");
            }
            printf("\n");
        }
    }
    
}
 
#include <stdio.h>

int main()
{
    
    for(int i=1; i<=3; i++){
        for(int j=1; j<=((i-1)*2+1); j++){
            printf("* ");
        }
        printf("\n");
        for(int j=1; j<=(i*i); j++){
                printf("* ");
                if(j%i==0){printf("\n");}
        }
        //printf("\n");
    }
    
}

