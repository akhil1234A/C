#include <stdio.h>

int main()
{
    for(int i=1; i<=3; i++){
        for(int j=0; j<i; j++){
            printf("*\n");
        }
        for(int j=0; j<i*4; j++){
            printf("*");
        }
        printf("\n");
    }
}

