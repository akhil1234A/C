#include <stdio.h>

int main()
{
    int k=0; 
    for(int i=1; i<=3; i++){
        
        for(int j=1; j<=(i*2); j++){
            printf("* ");
            if(j==i){printf("\n");}
        }
        printf("\n");
        for(int j=1; j<=(i==2? 6 : 3);j++){
            printf("* ");
        }
        printf("\n");
    }
    
}

