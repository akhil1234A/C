// * * * 
// *
// *
// * * * * * * 
// *
// *
// * * * * * * * * * 
// *
// *


#include <stdio.h>
int main() {

int n=3; 
for(int i=1; i<=n; i++){
	
	for(int j=1; j<=i*n;j++){
		printf("* ");
	}
	for(int j=1; j<=2; j++){
		printf("\n*");	
	}
	printf("\n");
}
return 0; 
}

//advanced
#include <stdio.h>
int main() {
int n=3; 
for(int i=1; i<=n*n; i++){
	for(int j=1; j<=(i==1 || i%3==1 ? i+2 : 1);j++){
		printf("* ");
	}
	printf("\n");
}
return 0; 
}
