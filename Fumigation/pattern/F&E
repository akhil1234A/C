 #include <stdio.h>
 int main(){
     
     for(int i=1; i<=3; i++){
         for(int j=1; j<=i*5;j++){
            printf("*"); 
         }
         if(i==3){return 0;}
         printf("\n");
         for(int j=0; j<i*3; j++){
             printf("*\n");
         }
     }
     
     return 0;
 }
 
