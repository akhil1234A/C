 #include <stdio.h>
 int main(){
     
     for(int i=1; i<=4; i++){
         for(int j=1; j<=(i%2==0 ? 3 : 5);j++){
            printf("*"); 
         }
         if(i==4){break;}
         printf("\n");
         for(int j=1; j<=i*i; j++){
             printf("* ");
             if(j%i==0){printf("\n");}
         }
         //printf("\n");
     }
     
     return 0;
 }
 
