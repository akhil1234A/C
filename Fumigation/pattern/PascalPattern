#include <stdio.h>

void printPascal(int n) {
    for (int line = 1; line <= n; line++) {
        int C = 1; // The first value in a line is always 1
        for (int i = 1; i <=line; i++) {
            // Print leading spaces for alignment
            
            printf("%d ",C);
  
            C = C * (line - i) / i;
            
        }
        printf("\n");
    }
}

int main() {
    int n;
    printf("Enter the number of rows: ");
    scanf("%d", &n);
    printPascal(n);
    return 0;
}


#include <stdio.h>

void printPascal(int n) {
    int arr[n][n]; // Declare a 2D array to store the values of Pascal's Triangle

    // Initialize the first element of each row to 1
    for (int line = 0; line < n; line++) {
        for (int i = 0; i <= line; i++) {
            // The first and last values in every row are 1
            if (i == 0 || i == line) {
                arr[line][i] = 1;
            } else {
                // Other values are sum of values just above and left of above
                arr[line][i] = arr[line - 1][i - 1] + arr[line - 1][i];
            }
            printf("%d ", arr[line][i]);
        }
        printf("\n");
    }
}

int main() {
    int n;
    printf("Enter the number of rows: ");
    scanf("%d", &n);
    printPascal(n);
    return 0;
}
