
// * 
// * * 
// * * * 
// * * * * 
// * * * * * 
// * * * * 
// * * * 
// * * 
// * 


#include <stdio.h>
int main() {
int num; 

printf("Enter a number: ");
scanf("%d",&num);

for(int i=1; i<=2*num-1; i++){
	for(int j=1; j<= (i>num ? 2*num-i : i); j++) {
		printf("* ");
	}
	printf("\n");
}
return 0; 
}
