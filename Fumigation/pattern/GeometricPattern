#include <stdio.h>
int main() {
int num; 

printf("Enter a number: ");
scanf("%d",&num);

for(int i=1; i<=2*num-1; i++){
	for(int j=1; j<= (i>num ? 2*num-i : i); j++) {
		printf("* ");
	}
	printf("\n");
}
return 0; 
}



* 
* ^* 
* ^* * 
* ^* * ^* 
* ^* * ^* * 
* ^* * ^* 
* ^* * 
* ^* 
* 

#include <stdio.h>
int main() {

int n=5; 

for(int i=0; i<n*2; i++){

for(int j=1; j<=(i>n? 2*n-i: i); j++){

	printf((j%2==0 ? "^* " : "* "));
}
printf("\n");

}


return 0; 
}
